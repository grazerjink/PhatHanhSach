@model PhatHanhSach.Web.Models.PhieuNhapViewModel
@{
    ViewBag.Title = "ThemChiTietPhieuNhap";
    Layout = "~/Views/Shared/Layout.cshtml";
    var dsSach = (IEnumerable<PhatHanhSach.Web.Models.SachViewModel>) ViewBag.dsSach;
    var dsCtPn = (List<PhatHanhSach.Web.Models.CtPhieuNhapViewModel>) Session["dsCtPhieuNhap"];
}

@section headerStyles {
    <!-- Datatables -->
    <link href="~/Assets/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/css/myCustom.css" rel="stylesheet">
}

@section footerJS {
    <!-- Datatables -->
    <script src="~/Assets/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Assets/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="~/Assets/vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
    <script src="~/Assets/vendors/jszip/dist/jszip.min.js"></script>
    <script src="~/Assets/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Assets/vendors/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Assets/js/myCustomJS.js"></script>
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Danh sách chi tiết - phiếu nhập <b>@Model.MaPhieuNhap</b></h3>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <span class="section">Danh sách chi tiết đã cập nhật</span>
                        <table id="datatable" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th>Mã phiếu </th>
                                    <th>Mã sách </th>
                                    <th>Số lượng nhập </th>
                                    <th>Đơn giá nhập </th>
                                    <th>Thành tiền </th>
                                    <th>*</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (dsCtPn != null)
                                {
                                    foreach (var ct in dsCtPn)
                                    {
                                        <tr>
                                            <td>@ct.MaPhieuNhap</td>
                                            <td>@ct.MaSach</td>
                                            <td>@ct.SoLuongNhap</td>
                                            <td>@ct.GiaNhap</td>
                                            <td>@ct.ThanhTien</td>
                                            <td class="text-center"><a href="/PhieuNhap/XoaPhieuNhap/@ct.MaPhieuNhap" class="btn btn-xs btn-danger"><i><span class="fa fa-close"></span></i></a></td>
                                        </tr>
                                    }
                                }                                
                            </tbody>
                        </table>
                    </div>

                    <div class="x_content">
                        @using (Html.BeginForm("ThemChiTietPhieuNhap", "PhieuNhap", FormMethod.Post, new { @class = "form-horizontal form-label-left", @novalidate = "" }))
                        {
                            @Html.AntiForgeryToken()
                            <span class="section">Nhập thông chi tiết</span>
                            <div hidden="hidden">
                                @Html.EditorForModel()
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="listSach">
                                    Mã sách <span class="required">*</span>
                                </label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.ctPhieuNhap.MaSach, new { @id = "listSach", @class = "form-control col-md-7 col-xs-12", placeholder = "Nhập thông tin mã sách...", @required = "" })
                                    <i class="error">*** Sẽ phải tự cập nhật thêm thông tin sách nếu là sách mới.</i>
                                </div>
                            </div>
                            <div class="item form-group ui-widget">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Số lượng <span class="required">*</span>
                                </label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.ctPhieuNhap.SoLuongNhap, new { @id = "listNXB", @class = "form-control col-md-7 col-xs-12", type="number", placeholder = "Nhập số lượng sách nhập", @required = "" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Đơn giá nhập <span class="required">*</span>
                                </label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.ctPhieuNhap.GiaNhap, new { @class = "form-control col-md-7 col-xs-12", type = "number", placeholder = "Nhập đơn giá nhập của sách...", @required = "" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Thành tiền <span class="required">*</span>
                                </label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.ctPhieuNhap.ThanhTien, new { @class = "form-control col-md-7 col-xs-12", placeholder = "0.00", type = "number", @required = "" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-5 col-sm-6 col-xs-12 col-lg-offset-3">
                                    @Html.ValidationSummary(false, "", new { @class = "error" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-5 col-sm-5 col-xs-12 col-md-offset-3">
                                    <div class="pull-left">
                                        <button id="reset" type="reset" class="btn btn-info">Hủy bỏ</button>
                                    </div>
                                    <div class="pull-right">
                                        <button id="next" type="submit" class="btn btn-primary" name="save">Lưu</button>
                                    </div>
                                </div>
                            </div>

                            <div class="ln_solid"></div>

                            <div class="pull-right">
                                <button class="btn btn-success" name="create">Thêm phiếu nhập</button>
                            </div>
                            <div class="pull-left">
                                <a class="btn btn-default" href="/">Về trang chính</a>
                            </div>
                        }
                    </div>                    
                 </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<div hidden="hidden">
    <ul>
        @foreach (var s in dsSach)
        {
            <li class="sach">@s.MaSach</li>
        }
    </ul>
</div>



