@{
    ViewBag.Title = "DoanhThu";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section headerStyles {
    <!-- bootstrap-datetimepicker -->
    <link href="~/Assets/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
    <!-- Ion.RangeSlider -->
    <link href="~/Assets/vendors/normalize-css/normalize.css" rel="stylesheet">
    <link href="~/Assets/vendors/ion.rangeSlider/css/ion.rangeSlider.css" rel="stylesheet">
    <link href="~/Assets/vendors/ion.rangeSlider/css/ion.rangeSlider.skinFlat.css" rel="stylesheet">
    <!-- Bootstrap Colorpicker -->
    <link href="~/Assets/vendors/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">

    <link href="~/Assets/vendors/cropper/dist/cropper.min.css" rel="stylesheet">

    <link href="~/Assets/css/myCustom.css" rel="stylesheet">
}

@section footerJS {
    <!-- bootstrap-datetimepicker -->
    <script src="~/Assets/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <!-- Ion.RangeSlider -->
    <script src="~/Assets/vendors/ion.rangeSlider/js/ion.rangeSlider.min.js"></script>
    <!-- Bootstrap Colorpicker -->
    <script src="~/Assets/vendors/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <!-- jquery.inputmask -->
    <script src="~/Assets/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>
    <!-- jQuery Knob -->
    <script src="~/Assets/vendors/jquery-knob/dist/jquery.knob.min.js"></script>
    <!-- Cropper -->
    <script src="~/Assets/vendors/cropper/dist/cropper.min.js"></script>
    <!-- validator -->
    <script src="~/Assets/vendors/validator/validator.js"></script>
    <!-- Chart.js -->
    <script src="~/Assets/vendors/Chart.js/dist/Chart.min.js"></script>
    <!-- autocomplete jquery -->
    <script src="~/Assets/js/myCustomJS.js"></script>
    <script src="~/Assets/js/revenue.js"></script>
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Thống kê doanh thu theo khoảng thời gian</h3>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">                
                <div class="x_panel">
                    <div class="x_content">
                        <form method="post" action="javascript:void(0);" class="form-horizontal form-label-left" style="margin-top:20px">
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-3">
                                    Khoảng thời gian cần thống kê <span class="required">*</span>
                                </label>
                                <div class="control-group col-md-5 col-sm-5 col-xs-5">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class='input-group date' id="myStartDate">
                                                <input class="form-control" placeholder="Thời gian bắt đầu..." id="NgayBatDau" name="NgayBatDau" required>
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class='input-group date' id="myEndDate">
                                                <input class="form-control" placeholder="Thời gian kết thúc..." id="NgayKetThuc" name="NgayKetThuc" required>
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group col-md-4 col-sm-4 col-xs-4">
                                    <div class='input-group pull-left'>
                                        <button class="btn btn-default" type="reset">Hủy</button>
                                    </div>
                                    <div class='input-group pull-left'>
                                        <button class="btn btn-success" type="submit" id="btnThongKe">Xem thống kê</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="ln_solid"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-8 col-sm-8 col-xs-10">
                                <canvas id="revenueChart"></canvas>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
                                <label>
                                    Tổng tiền chi:                                     
                                </label>
                                <p id="TongTienChi">0.00</p>
                                <hr />
                                <label>
                                    Tổng tiền thu:
                                </label>
                                <p id="TongTienThu">0.00</p>
                                <hr />
                                <label>
                                    Tổng lợi nhuận thống kê:
                                </label>
                                <p id="TongLoiNhuan">0.00</p>
                            </div>
                        </div>                        
                        <div class="ln_solid"></div>
                        <div class="pull-left">
                            <a class="btn btn-default" href="/">Về trang chính</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

